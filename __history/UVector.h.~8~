//---------------------------------------------------------------------------

#ifndef UVectorH
#define UVectorH
//---------------------------------------------------------------------------

const int LONGMAX = 200;
class CVector{
	private:
		int dimension; //tamaño actual
		int vector[LONGMAX];
	public:
		CVector();
		int getDimension(); //obtiene la dimensión actual
		void setDimension(int valor); //modifica la dimensión actual
		int getElemento(int posicion); //retorna un elemento del vector
		void setElemento(int posicion, int elemento); //modifica un elemento del vector
		int devolverElementoRepetido();
		void intercalarImparesPares();
		void intercambiar(int pos1, int pos2);
		bool esPrimo(int numero);
		void eliminar(int pos);
		void eliminarPrimos();
		void eliminarMultiplos(int num);
		int sumarPosicionImpar();
};

#endif
